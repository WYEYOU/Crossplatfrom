<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewMUAI.Pages.FlexLayoutPage"
             Title="FlexLayoutPage">
        <FlexLayout Direction="Row" JustifyContent="Center" AlignItems="Center">     
        <StackLayout>
            <Border Stroke="Black" StrokeThickness="4" Padding="20,5" Margin="5">
                <Rectangle WidthRequest="100"
                           HeightRequest="100"
                           BackgroundColor="Red"></Rectangle>
            </Border>
            <Rectangle WidthRequest="100"
                       HeightRequest="100"
                       BackgroundColor="Green"
                       Stroke="Black"
                       StrokeThickness="5"></Rectangle>
            <Rectangle WidthRequest="100"
                       HeightRequest="100"
                       BackgroundColor="Blue"></Rectangle>
        </StackLayout>
    </FlexLayout>
</ContentPage>