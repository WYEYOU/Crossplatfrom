<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewMUAI.Pages.ViewsPage"
             Shell.NavBarIsVisible="False"
             Title="ViewsPage">
    <ScrollView>
        <VerticalStackLayout VerticalOptions="Center">
            <Label
                TextColor="SeaGreen"
                FontSize="30"
                FontAttributes="Bold"
                Text="Welcome to .NET MAUI!"
                VerticalOptions="Center"
                HorizontalOptions="Center"/>
            <Border WidthRequest="250"
                    StrokeShape="RoundRectangle 40,0,0,40"
                    Padding="20">
                <Image Source="meow1.jpg"
                       WidthRequest="200"
                       Aspect="AspectFit"></Image>
            </Border>
            <Button Text="Kiss me more!"
                    WidthRequest="250"
                    Margin="0,10"
                    BackgroundColor="BlanchedAlmond"
                    TextColor="Brown"
                    ImageSource="ig.png"
                    HeightRequest="50"
                    ContentLayout="Right,10"
                    Clicked="Button_Clicked"></Button>
            <ImageButton Source="ig.png"
                         Clicked="ImageButton_Clicked"></ImageButton>
            <Entry WidthRequest="280"
                   HorizontalTextAlignment="Center"
                   Margin="0,10"></Entry>
            <Entry WidthRequest="280"
                   HorizontalTextAlignment="Center"
                   IsPassword="True"></Entry>
            <Border HeightRequest="500"
                    WidthRequest="300">
                <Editor>

                </Editor>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>